{
  "name": "colinhdev/libasyncevent",
  "description": "Simple implementation for creating asynchronous event execution for PocketMine-MP plugins.",
  "type": "library",
  "license": "GPL-3.0-or-later",
  "require": {
    "php": "^8.1",
    "pocketmine/pocketmine-mp": "^5.5.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10.0",
    "phpstan/phpstan-strict-rules": "^1.5.0",
    "phpstan/extension-installer": "^1.3.0"
  },
  "autoload": {
    "classmap": ["src"]
  },
  "extra": {
    "virion": {
      "spec": "3.0",
      "namespace-root": "ColinHDev\\libAsyncEvent"
    }
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
